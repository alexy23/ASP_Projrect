@model ImageBoard.ViewModel.ModelPostThemeAll

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@section Head{
<ul class="nav navbar-nav navbar-right">
            <li>
                <a href="~/Account/Create">Регистрация</a>
            </li>
        </ul>
}
@section Menu{
    <p>
        [@Html.ActionLink("Создать Новую Тему", "Create")]
    </p>
    <hr />
}
@section Field{
    @if (Model == null || Model.Themes == null)
    {
        <center><h1>Пока Не Создано не одной темы!</h1></center>
    }
    else
    {
        foreach (var item in Model.Themes)
        {
        <table>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountPost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountUserSee)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </table>
        }
    }
}


@section Info{
    @Html.Partial("BaseLoginForm")
}

